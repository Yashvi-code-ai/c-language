#include <stdio.h>


struct Student {
    int roll;
    char name[50];
    float marks;
};


void printStudent(struct Student s) {
    printf("Roll Number: %d\n", s.roll);
    printf("Name: %s\n", s.name);
    printf("Marks: %.2f\n", s.marks);
}

int main() {
    struct Student st;


    printf("Enter Roll Number: ");
    scanf("%d", &st.roll);

    printf("Enter Name: ");
    scanf("%s", st.name);

    printf("Enter Marks: ");
    scanf("%f", &st.marks);

 
    printf("\n--- Student Details ---\n");
    printStudent(st);

    return 0;
}
