#include <stdio.h>

void previousGreaterElement(int arr[], int n) {
    int stack[n]; // Stack to store potential previous greater elements
    int top = -1; // Stack is empty initially
    int pge[n];   // Array to store previous greater elements

    for (int i = 0; i < n; i++) {
        // Pop elements from stack while they are <= current element
        while (top != -1 && stack[top] <= arr[i]) {
            top--;
        }

        // If stack is not empty, top element is previous greater
        if (top != -1) {
            pge[i] = stack[top];
        } else {
            pge[i] = -1; // No previous greater element
        }

        // Push current element to stack
        stack[++top] = arr[i];
    }

    // Print results
    printf("Previous Greater Elements:\n");
    for (int i = 0; i < n; i++) {
        printf("%d -> %d\n", arr[i], pge[i]);
    }
}

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter the array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    previousGreaterElement(arr, n);

    return 0;
}
