#include <stdio.h>
#include <string.h>

#define CHAR_RANGE 26 // lowercase letters 'a' to 'z'

int areAnagrams(char s[], char t[]) {
    int countS[CHAR_RANGE] = {0};
    int countT[CHAR_RANGE] = {0};

    // Count frequency of each character in s
    for (int i = 0; s[i] != '\0'; i++) {
        countS[s[i] - 'a']++;
    }

    // Count frequency of each character in t
    for (int i = 0; t[i] != '\0'; i++) {
        countT[t[i] - 'a']++;
    }

    // Compare counts
    for (int i = 0; i < CHAR_RANGE; i++) {
        if (countS[i] != countT[i]) {
            return 0; // Not an anagram
        }
    }

    return 1; // Anagram
}

int main() {
    char s[1000], t[1000];
    printf("Enter first string: ");
    scanf("%s", s);
    printf("Enter second string: ");
    scanf("%s", t);

    if (strlen(s) != strlen(t)) {
        printf("Not Anagram\n");
        return 0;
    }

    if (areAnagrams(s, t)) {
        printf("Anagram\n");
    } else {
        printf("Not Anagram\n");
    }

    return 0;
}
