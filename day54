#include <stdio.h>
#include <math.h>

int main() {
    int n;
    printf("Enter a positive integer n: ");
    scanf("%d", &n);

    int totalSum = n * (n + 1) / 2;  // Sum of 1 to n

    // Calculate potential pivot using square root
    double sqrtVal = sqrt(totalSum);
    int x = (int)sqrtVal;

    if (x * x == totalSum) {
        printf("Pivot integer: %d\n", x);
    } else {
        printf("Pivot integer: -1\n");
    }

    return 0;
}
