#include <stdio.h>

void nextGreaterElement(int arr[], int n) {
    int stack[n]; // Stack to keep track of elements
    int top = -1; // Stack is empty initially
    int nge[n];   // Array to store next greater elements

    // Initialize all nge values to -1
    for (int i = 0; i < n; i++)
        nge[i] = -1;

    for (int i = 0; i < n; i++) {
        // While stack is not empty and current element is greater than element at stack top
        while (top != -1 && arr[i] > arr[stack[top]]) {
            nge[stack[top]] = arr[i]; // Current element is next greater for stack top
            top--;                     // Pop from stack
        }
        // Push current index to stack
        stack[++top] = i;
    }

    // Print results
    printf("Next Greater Elements:\n");
    for (int i = 0; i < n; i++) {
        printf("%d -> %d\n", arr[i], nge[i]);
    }
}

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter the array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    nextGreaterElement(arr, n);

    return 0;
}
