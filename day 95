#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};


struct Student findTopStudent(struct Student s[], int n) {
    int i, topIndex = 0;

    for(i = 1; i < n; i++) {
        if(s[i].marks > s[topIndex].marks) {
            topIndex = i;
        }
    }

    return s[topIndex]; 
}

int main() {
    struct Student s[5], top;
    int i;


    printf("Enter details of 5 students:\n");
    for(i = 0; i < 5; i++) {
        printf("\nStudent %d\n", i + 1);

        printf("Roll Number: ");
        scanf("%d", &s[i].roll);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Marks: ");
        scanf("%f", &s[i].marks);
    }

   
    top = findTopStudent(s, 5);

  
    printf("\n--- Top Student ---\n");
    printf("Roll Number: %d\n", top.roll);
    printf("Name: %s\n", top.name);
    printf("Marks: %.2f\n", top.marks);

    return 0;
}
