#include <stdio.h>

int main() {
    FILE *file;
    int num;
    int count = 0;
    long sum = 0;

    file = fopen("numbers.txt", "r");
    if (file == NULL) {
        printf("Error: could not open file.\n");
        return 1;
    }


    while (fscanf(file, "%d", &num) == 1) {
        sum += num;
        count++;
    }

    fclose(file);

    if (count == 0) {
        printf("No numbers found in file.\n");
        return 0;
    }

    double average = (double)sum / count;

    printf("Sum: %ld\n", sum);
    printf("Average: %.2f\n", average);

    return 0;
}
