#include <stdio.h>

int findPivotIndex(int arr[], int n) {
    int totalSum = 0;
    for (int i = 0; i < n; i++) {
        totalSum += arr[i];  // Calculate total sum of array
    }

    int leftSum = 0;
    for (int i = 0; i < n; i++) {
        int rightSum = totalSum - leftSum - arr[i]; // Sum on the right
        if (leftSum == rightSum) {
            return i;  // Found pivot
        }
        leftSum += arr[i];  // Update left sum for next index
    }

    return -1; // No pivot index found
}

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter the array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int pivotIndex = findPivotIndex(arr, n);
    printf("Pivot index: %d\n", pivotIndex);

    return 0;
}
